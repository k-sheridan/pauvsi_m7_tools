function create3DQuad(quadcopter)
%This will create the 3D quadrotor using plot3

quadX = quadcopter.pos(1);
quadY = quadcopter.pos(2);
quadZ = quadcopter.pos(3);
baseColor = 'b';
baseLineWidth = 3;
armColor = 'b';

hold on
% create the base of the quad
%BOTTOM SIDE
points = zeros()
points(1:3, 1) = [-0.07, -0.07, -0.04];
points(1:3, 2) = [0.07, -0.07, -0.04];


p = plot3(X, Y, Z, baseColor);
p.LineWidth = baseLineWidth;

X = [quadX - 0.07, quadX + 0.07];
Y = [quadY + 0.07, quadY + 0.07];
Z = [quadZ - 0.04, quadZ - 0.04];
p = plot3(X, Y, Z, baseColor);
p.LineWidth = baseLineWidth;


end

